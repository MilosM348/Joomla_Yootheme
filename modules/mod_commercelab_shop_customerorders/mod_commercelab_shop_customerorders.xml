<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.5" client="site" method="upgrade">
    <name>CommerceLab Shop - Customer Orders</name>
    <author>Cloud Chief - CommerceLab Shop</author>    
    <copyright>Copyright (C) 2022 CommerceLab. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <creationDate>March 2022</creationDate>
    <version>2.0.0</version>
    <description>CommerceLab - Customer Orders - by Cloud Chief - CommerceLab</description>
    <files>
        <filename module="mod_commercelab_shop_customerorders">mod_commercelab_shop_customerorders.php</filename>
        <folder>tmpl</folder>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic" label="Basic">
                <field name="date_format" type="list" default="DATE_FORMAT_LC6" required="true" label="Select Date Format" description="">
                    <option value="">Please Select</option>
                    <option value="DATE_FORMAT_LC">l, d F Y (Tuesday, 09 November 2021)</option>
                    <option value="DATE_FORMAT_LC2">l, d F Y H:i (Tuesday, 09 November 2021 19:44)</option>
                    <option value="DATE_FORMAT_LC3">d F Y (09 November 2021)</option>
                    <option value="DATE_FORMAT_LC4">Y-m-d (2021-11-09)</option>
                    <option value="DATE_FORMAT_LC5">Y-m-d H:i (2021-11-09 19:44)</option>
                    <option value="DATE_FORMAT_LC6">Y-m-d H:i:s (2021-11-09 19:44:10)</option>
                    <option value="DATE_FORMAT_JS1">y-m-d (21-11-09)</option>
                    <option value="m-d-Y">m-d-Y (11-09-21)</option>
                    <option value="m-d-Y H:i">m-d-Y (11-09-2021 19:44)</option>
                    <option value="m-d-Y H:i:s">m-d-Y (11-09-2021 19:44:10)</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>







