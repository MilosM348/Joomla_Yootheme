<form>
    <fieldset name="details"  addfieldpath="/administrator/components/com_commercelab_shop/models/fields">

		<field name="zone_name" type="vuetext" default="title" label="COM_COMMERCELAB_SHOP_ZONES_TABLE_ZONENAME" description="" size="10"
			class="uk-input uk-form-width-medium uk-form-large"/>

		<field name="country_id" type="countryselect" default="title" label="COM_COMMERCELAB_SHOP_ZONES_TABLE_COUNTRYNAME" description="" size="10"
			class="uk-input uk-form-width-medium uk-form-large"/>

		<field name="zone_isocode" type="vuetext" default="0" label="COM_COMMERCELAB_SHOP_ZONES_TABLE_ISO" description="" size="10"
			class="uk-input uk-form-width-medium uk-form-large" />

		<field name="inherit_taxrate" type="pinputswitch" default="1" 
			label="Inherit tax rate" 
			description="" class="btn-group btn-group-yesno"
		/>

		<field name="taxrate" type="vuenumberzonetaxrate" 
			default="0" label="Standard Taxrate (%)" 
			description="" size="4" 
			step="0.01" class="uk-input uk-form-width-medium uk-form-large" 
		/>

		<field name="taxrate_reduced" type="vuenumberzonetaxrate" 
			default="0" label="Reduced Taxrate (%)" 
			description="" size="4" 
			step="0.01" class="uk-input uk-form-width-medium uk-form-large" 
		/>

		<field name="taxrate_extra" type="vuenumberzonetaxrate" 
			default="0" label="Extra Taxrate (%)" 
			description="" size="4" 
			step="0.01" class="uk-input uk-form-width-medium uk-form-large" 
		/>

		<field name="published" type="pinputswitch" default="0" 
			label="COM_COMMERCELAB_SHOP_COUNTRIES_TABLE_PUBLISHED" 
			description="" class="btn-group btn-group-yesno"
		>
	    	<option value="1">JYES</option>
	    	<option value="0">JNO</option>
		</field>

    </fieldset>

</form>
